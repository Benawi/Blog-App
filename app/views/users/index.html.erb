<%= render "layouts/header" %>
<% @users.each do |user| %>
    <div class="user-container">
      <%=image_tag(image_url(user), alt: "User#{user.id} photo") %>
      <div>
         <%=  link_to user_path(user.id), {class: "user_container d-flex justify-content-between text-decoration-none"} do%>
         <h2><%= user.name %></h2>
         <h4>Number of posts: <%= post_counter(user) %></h4>
       <%end%>
      </div>
    </div>
<% end %>
<%= render "layouts/footer" %>


